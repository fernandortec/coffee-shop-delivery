{
	"extends": "@repo/tsconfig/nextjs.json",
	"compilerOptions": {
		"paths": {
			"@/*": ["./*"],
			"@/app/*": ["./app/*"]
		},
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": [
		"next-env.d.ts",
		"next.config.js",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts"
	],

	"declaration": false,
	"declarationMap": false,

	"exclude": ["node_modules"]
}
